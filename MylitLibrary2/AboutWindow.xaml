<Window x:Class="MylitLibrary.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acerca de MyLitLibrary" Height="300" Width="400" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="20" FontWeight="Bold" TextAlignment="Center">MyLitLibrary</TextBlock>
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Desarrollado por: Pedro Meseguer Gelardo" Margin="5"/>
            <TextBlock Text="Versión: 1.0.0" Margin="5"/>
            <!-- Aquí puedes añadir más información relevante sobre tu aplicación -->
        </StackPanel>
        <Button x:Name="btClose" Grid.Row="2" Content="Cerrar" HorizontalAlignment="Right" Margin="5" Click="btClose_Click"/>
    </Grid>
</Window>

